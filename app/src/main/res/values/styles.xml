<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--splash 화면에 사용될 테마-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="TitleTextView"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="HeadTextView"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/HeadColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ExplainTextView"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="RedButtonClickStyle">
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/buttonColorRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueButtonClickStyle">
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/buttonColorBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueNormalButtonClickStyle">
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/buttonColorNormalBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TransparentButtonClickStyle">
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/Transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EditTextView"  parent="@android:style/Widget.EditText">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/gray44</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TableTextView"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>